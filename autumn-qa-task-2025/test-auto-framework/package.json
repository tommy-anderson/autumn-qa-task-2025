{
  "name": "task-manager-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright test automation framework for Task Manager application",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:user-stories": "playwright test tests/user-stories",
    "test:regression": "playwright test tests/regression",
    "test:combinations": "playwright test tests/combinations",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @regression"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

